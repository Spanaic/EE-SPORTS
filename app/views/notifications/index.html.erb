<% notifications = @notifications.where.not(visitor: current_user.id) %>
<% if notifications.exists? %>
    <%= render partial: 'notification', collection: notifications %>
    <%# renderする時にcollection:オプションを使うと,複数のインスタンスをパーシャル上で単数のインスタンスとして呼び出すことができるようになる %>
    <%= paginate notifications, class: "paginate" %>
<% else %>
    <p>通知はありません</p>
<% end %>