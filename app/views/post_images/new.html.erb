<div class="container">
  <div class="row" style="padding: 50px;">
    <div class="col-md-3"></div>
    <div class="col-md-6" style="text-align: center;">
      <div class="registration-right-box" style="display: inline-block;">
        <div class="registration-form-box">
          <h1>投稿する</h1>
          <div class="registration-form-small-box">

            <%= form_for(@post_image) do |f| %>
                <%= render "post_images/error_messages", post_image: @post_image %>


              <%# <div class="registration-form-tiny-box"> %>
                <div class="session-input-part">
                    <label class="field">
                        <p>画像を選択してね！</p>
                        <%= f.attachment_field :post_image %>
                    </label>
                </div>
              <%# </div> %>

              <%# <div class="registration-form-tiny-box"> %>
                <div class="sessiton-input-part">
                  <div class="field">
                    <p>画像について教えてね！</p>
                    <%= f.text_area :caption %>
                  </div>
                </div>

              <%# <div class="registration-submit-box"> %>
                <div class="registration-submit-small-box">
                  <%= f.submit "投稿する！" %>
                </div>
              <%# </div> %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>