<h1>新規画像投稿</h1>

<div class="container">
    <%= form_for(@post_image) do |f| %>
    <%# form_forの％”=”を忘れない %>
        <%= render "post_images/error_messages", post_image: @post_image %>

        <div>
        <label class="field">
            <p>画像を選択してね！</p>
            <%= f.attachment_field :post_image %>
        </label>
        </div>

            <p>画像について教えてね！</p>
            <%= f.text_area :caption %>

            <%= f.submit "投稿する！" %>
    <% end %>
</div>