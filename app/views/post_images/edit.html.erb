<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="registration-right-box" style="margin: 0 auto; padding: 40px 0;">
                <div class="edit-post-image-form-box">
                <h1>良い!-SPORTS</h1>
                    <div class="registration-form-small-box" style="padding-bottom: 20px;">
                        <h2 style="font-size: 17px; font-weight: bold;">現在の投稿画像</h2>

                        <div class="user-detail-profile-box">
                                <div class="edit-post-image-box">
                                    <div><%= attachment_image_tag @post_image, :post_image, :fill, 480, 270 %></div>
                                </div>
                            </div>
                        </div>

                        <div class="registration-or-border-line-box">
                        <div class="or-border-line"></div>
                        <div class="or-message">編集</div>
                        <div class="or-border-line"></div>
                        </div>

                        <%= form_for(@post_image) do |f| %>
                        <%= render "post_images/error_messages", post_image: @post_image %>
                            <div class="registration-input-part">
                            <div class="field">
                                <%= f.label :post_image %><br />
                                <%= f.attachment_field :post_image, style: "margin: 0 auto;" %>
                            </div>
                            </div>

                            <div class="registration-input-part">
                                <div class="field">
                                <%= f.label :caption %><br />
                                <%= f.text_area :caption, autofocus: true, autocomplete: "introduction" %>
                                </div>
                            </div>

                            <div class="registration-submit-small-box">
                            <%= f.submit "送信する", style: "margin-top: 10px;" %>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>