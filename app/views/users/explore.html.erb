<div class="recommend-users-big-box">
    <p style="font-weight: bold;　font-size: 22px;">フォローする人を見つけよう</p>
    <% if @search_users %>
        <%= render 'users/search', users: @search_users %>
    <% else %>
        <%= render 'users/list', users: @users %>
    <% end %>
    <%= paginate @users, class: "paginate" %>
    <p style="padding-top: 20px;"><%= link_to "すべて見る", users_path, class: "recommend-all-users" %></p>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="user-post-image-box">
            <% @randoms.each do |random| %>
                <div class="each-post-image-box">
                    <%= link_to post_image_path(random.id) do %>
                        <%= attachment_image_tag random, :post_image, :fill, 293, 293, format: 'jpeg', class: "each-post-image-box", fallback: 'no_image.jpg', size: "293x293" %>
                    <% end %>
                </div>
            <% end %>
            <p><%= paginate @randoms, class: "paginate" %></p>
        </div>
    </div>
</div>