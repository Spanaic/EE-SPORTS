    <%= follow.name %>

    <%= follow.profile_name %>

    <%= "投稿#{follow.post_images.count}件" %>

    <% if current_user == follow  %>
    <% else %>
        <% if follow.followed_by?(current_user) %>
            <button type="button" class="btn btn-primary"><%= link_to "フォローをやめる", user_relationships_path(@user.id), method: :delete %></button>
        <% else %>
