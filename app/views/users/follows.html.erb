<div class="container">
    <div class="row">
        <div class="col-md-12 index-users-main-box">
            <p style="font-weight: bold; padding-top: 10px;">フォロワー</p>
            <div class="index-users-big-box">
                <% @follows.each do |follow| %>
                    <div class="index-users-small-box">
                        <div class="index-users-item">
                            <%= link_to user_path(follow.profile_name) do %>
                                <%= attachment_image_tag follow, :profile_image, :fill, 40, 40, format: 'jpeg', size: '40x40', fallback: 'no_image.jpg', class: "profile-image-style" %>
                            <% end %>
                        </div>
                        <div class="index-users-item">
                            <%= link_to user_path(follow.profile_name) do %>
                                <%= follow.profile_name %>
                            <% end %>
                        </div>
                        <div class="index-users-item">
                            <%= link_to user_path(follow.profile_name) do %>
                                <%= "#{follow.name}" %>
                            <% end %>
                        </div>

                        <div class="index-users-item all-users-follow-button">
                            <button><%= link_to "フォロー中", user_path(follow.profile_name) %></button>
                        </div>
                　　</div>
                    <div class="index-users-border-line"></div>
                <% end %>
            </div>
        </div>
    </div>
</div>